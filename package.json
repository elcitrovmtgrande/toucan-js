{
  "name": "toucan",
  "version": "1.0.0",
  "description": "A lightweight API pour JWT (JSON Web Token) for both client and server side.",
  "main": "index.js",
  "scripts": {
    "start:server": "ts-node src/server/express-server-app.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server/express-server-app.ts",
    "build:ts": "tsc -p .",
    "minify": "npx terser ./dist/**/*.js --output ./index.js",
    "build": "npm run build:ts && npm run minify"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "express": "^4.18.2",
    "nodemon": "^3.0.1",
    "terser": "^5.19.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.1",
    "jwt-decode": "^3.1.2"
  }
}
